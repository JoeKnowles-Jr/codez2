<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/LocalFragment">

    <fragment
        android:id="@+id/RemoteFragment"
        android:name="com.jk.codez.fragments.RemoteFragment"
        android:label="@string/remote_fragment_label"
        tools:layout="@layout/fragment_remote">

        <action
            android:id="@+id/action_FirstFragment_to_StatsFragment"
            app:destination="@id/LocalFragment" />
    </fragment>
    <fragment
        android:id="@+id/LocalFragment"
        android:name="com.jk.codez.fragments.LocalFragment"
        android:label="@string/local_fragment_label"
        tools:layout="@layout/fragment_local">

        <action
            android:id="@+id/action_SecondFragment_to_FirstFragment"
            app:destination="@id/RemoteFragment" />
    </fragment>
</navigation>